{
  "version": 2,
  "builds": [
    {
      "src": "app/nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["app/package.json", "app/configuration/**", "app/translation/**", "app/.nuxt/dist/sitemap-routes.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/sw.js",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "/.nuxt/.+",
      "headers": {
        "Cache-Control": "max-age=31557600"
      }
    },
    {
      "src": "^/(.*)",
      "dest": "/"
    }
  ]
}
